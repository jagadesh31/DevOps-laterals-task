version: "3.9"

services:
  db:
    image: postgres:15
    environment:
      POSTGRES_DB: rust_server
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: Try2read
    volumes:
      - pgdata:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 5s
      timeout: 3s
      retries: 5
    networks:
      - app-network
    restart: unless-stopped

  backend:
    build: ./Backend
    expose:
      - "8080"
    environment:
     DATABASE_URL: "postgres://postgres:Try2read@db:5432/rust_server"
     RUST_LOG: "info"

    depends_on:
      db:
        condition: service_healthy
    networks:
      - app-network
    # restart: unless-stopped
    restart: on-failure:5

  frontend:
    build: ./Frontend
    expose:
      - "3000"
    networks:
      - app-network
    restart: unless-stopped
    environment:
      - DANGEROUSLY_DISABLE_HOST_CHECK=true


  nginx:
    build: ./nginx
    ports:
      - "80:80"
    depends_on:
      - backend
      - frontend
    networks:
      - app-network
    restart: unless-stopped

volumes:
  pgdata:

networks:
  app-network:
    driver: bridge
